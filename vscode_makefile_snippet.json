{
	"Create Makefile": {
		"prefix": "make Makefile",
		"body": [
			"NAME = $1",
			"",
			"CC = c++",
			"",
			"FLAGS = -Wall -Wextra -Werror -std=c++98",
			"",
			"SRC_DIR = ./src/",
			"OBJ_DIR = ./obj/",
			"INC_DIR = ./inc/",
			"",
			"SRC_FILES =  $2",
			"",
			"OBJ_FILES = $(SRC_FILES:.cpp=.o)",
			"",
			"SRC = $(addprefix $(SRC_DIR), $(SRC_FILES))",
			"OBJ = $(addprefix $(OBJ_DIR), $(OBJ_FILES))",
			"",
			"all : $(NAME)",
			"",
			"$(OBJ_DIR)%.o: $(SRC_DIR)%.cpp $(INC_DIR)*",
			"\t@$(CC) $(FLAGS) -I $(INC_DIR) -o $@ -c $<",
			"\t@echo updated $@",
			"",
			"$(NAME) : obj $(OBJ)",
			"\t@echo \".o files updated!...linking...\"",
			"\t@$(CC) $(FLAGS) $(OBJ) -o $(NAME)",
			"\t@echo \"$(NAME) executable compiled!\"",
			"",
			"obj:",
			"\t@mkdir -p $(OBJ_DIR)",
			"",
			"clean :",
			"\tcd $(OBJ_DIR) && rm -rf $(OBJ_FILES)",
			"",
			"fclean : clean",
			"\trm -rf $(NAME)",
			"",
			"re : fclean all",
		],
		"description": "Create Makefile for usual file structure."
	}

}
